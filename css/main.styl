.dashed-line
	height 20px
	left 134px
	position absolute
	top 50px
	width 130px
	border-bottom 5px dashed rgb( 255, 210, 0)

.row
	margin 0

.no-margin
	margin 0

.full-height
	height 100vh

#adventages
	background-color rgb(243, 240, 231)
	margin 0
	padding 0.5em 0 0 0
	position relative

	h3
		font-weight 200
		text-align center
		text-transform uppercase
		margin 1em 0

		&::first-letter
			font-size 1.2em

	.btn
		align-items center
		background-color rgba(#E11A27, 0.8)
		border 1px solid rgba(#E11A27, 0.2)
		bottom -30px
		color rgba( 255, 255, 255, 0.9 )
		display flex
		flex-direction columns
		font-size 1.3em
		margin 0 auto
		padding 0.7em 1.7em
		position relative
		transition all 0.5s

		&:hover
			border 1px solid rgba(13,13,13,0.2)
			box-shadow 2px 2px 10px rgba(0,0,0,0.6)
			text-shadow 1px 1px 1px rgba(0,0,0,0.4)

	.content
		display flex
		margin 2em auto 1em
		overflow-x auto
		width 80%

		.adventage
			height 390px
			margin 0 auto
			min-width 300px
			width 300px

			&:hover
				border 1px solid rgba(243, 240, 231,0.2)
				box-shadow inset -3px -4px 15px rgba(0,0,0,0.2)
				text-shadow 1px 1px 1px rgba(0,0,0,0.1)

			img
				border-radius 50%
				display block
				margin 0 auto
				height 250px
				width 250px

			h4
				font-size 1.3em

			p
				margin 0
				padding 0.4em

#page-options
	height 350px
	position relative

	.options
		display flex
		margin 0 10%
		overflow-x auto
		position absolute
		bottom 20%
		width 85%

		.option
			height 250px
			margin 0 58px
			min-width 145px
			padding 0
			position relative
			transition all 0.4s
			width 145px
			border 1px solid rgba(255,210,0, 0)

			div
				align-items center
				background-color white
				border 5px solid rgb( 255, 210, 0)
				border-radius 50%
				display flex
				height 137px
				max-height 100%
				max-width 95%
				width 137px

				img
					display block
					height 48px
					margin 0 auto
					width 52px

			.description
				display block
				margin 0 auto
				font-size 1.5em
				max-width 134px
				padding 1em 0 0 0

#principal
	overflow hidden

	.home
		align-items center
		display flex
		flex-direction column
		height (100vh)
		padding-bottom -80px
		position relative

		h1, h3
			position relative
			top 15%

		h1
			letter-spacing 2px
			z-index 10

			&::first-letter
				font-size 1.3em

		h3
			font-size 1.3em
			font-weight 550
			z-index 10

		.bg-img
			background-position center
			background-size cover
			height 100%
			position absolute
			width 100%

		.btn
			background-color transparent
			border 1px solid rgba(33,33,33, 0.3)
			font-size 1.3em
			padding 0.7em 1.7em
			position relative
			top 25%
			transition all 0.5s

			&:hover
				border 1px solid rgba(13,13,13,0.2)
				box-shadow 2px 2px 10px rgba(0,0,0,0.6)
				text-shadow 1px 1px 1px rgba(0,0,0,0.4)

	#nav
		background white
		height 80px
		padding 25px 0 0 0
		position absolute
		width 100%
		z-index 10

		div
			height 30px

		.nav-contact
			padding 0

			a
				background-color: rgb( 255, 210, 0 )
				border-radius 10px
				color rgb( 33, 33, 33 )
				display inline-block
				margin -7px 0 0 0
				padding 0.5em 10%
				position relative
				white-space nowrap

				&:before
					border-top 2px dotted rgb( 33, 33, 33 )
					bottom 24%
					content ''
					left 10%
					margin 0 20px
					position absolute
					width 62%

				&:hover
					text-decoration none

		.nav-log
			.box-border
				border-bottom 2px solid black
				border-right 2px solid black
				border-top 2px solid black
				left 35%
				margin -6px 0 0 0
				position relative
				width 27px

				svg
					cursor pointer
					left -9px
					padding-top 12px
					position absolute

					line
						display inline-block
						stroke black
						stroke-width 1.5px

		.nav-menu
			padding 0.3em 0 0 0

			svg
				border-bottom 1.5px solid black
				border-top 1px solid black
				cursor pointer
				margin 0 0 0 25%
				padding-top 8px

				line
					stroke black
					stroke-width 1.5px

		.nav-title
			font-weight bold
			padding 0

			p
				color black
				font-size 20px
				white-space nowrap

				img
					height 19px
					position relative
					top -2px
					width 19px




@media only screen and (max-width 700px)

	#adventages

		.btn
			transform scale(0.9)

		.content

			.adventage
				height 300px
				min-width 200px
				width 210px

				img
					height 160px
					width 160px
				h4
					font-size 1.2em

				p
					font-size 0.9em

	#page-options
		.options
			bottom 0
			font-size 0.8em
			height 230px
			margin-left 8%
			
			.option
				// div
				height 220px
				// 	width 110px


	#principal

		.home
			top 5%
			h1
				font-size 2em

			h3
				top 8%

			.btn
				top 15%

		#nav
			.nav-contact
				left -2%


@media only screen and (max-width 400px)

	#adventages

		h3
			font-size 1.2em

		.btn
			transform scale(0.8)

		.content

			.adventage
				height 300px
				min-width 200px
				width 210px

				img
					height 160px
					width 160px

				h4
					font-size 1.2em

				p
					font-size 0.9em

	#principal
		.home

			h1
				font-size 2em
			
			.bg-img
				//

		#nav
			font-size 0.8em

			.nav-contact
				top 7px
				left -3px

			.nav-log
				left -2px


@media only screen and (max-height 500px) and (orientation landscape)

	#adventages

		h3
			font-size 1.2em
			margin-top -2px

		.btn
			transform scale(0.6)

		.content
			margin 0 5%
			margin-bottom -20px
			margin-top -5px
			width 90%
			.adventage
				height 220px
				min-width 150px
				width 160px

				img
					height 80px
					width 80px

				h4
					font-size 0.8em

				p
					font-size 0.7em