.row
	margin 0

.no-margin
	margin 0

.full-height
	height 100vh

#page-options
	// background #333

#principal
	overflow hidden

	#nav
		position relative
		padding 25px 0 0 0
		height 80px
		background-color white
		z-index 10

		div
			height 30px

		.nav-contact
			padding 0
			a
				display inline-block
				background-color: rgb( 255, 210, 0 )
				border-radius 10px
				color rgb( 33, 33, 33 )
				margin -7px 0 0 0
				padding 0.5em 10%
				position relative
				white-space nowrap
				&:before
					content ''
					width 62%
					margin 0 20px
					position absolute
					left 10%
					bottom 24%
					border-top 2px dotted rgb( 33, 33, 33 )
				&:hover
					text-decoration none

		.nav-log
			.box-border
				border-bottom 2px solid black
				border-right 2px solid black
				border-top 2px solid black
				width 27px
				position relative
				left 35%
				margin -6px 0 0 0

				svg
					cursor pointer
					left -9px
					padding-top 12px
					position absolute

					line
						display inline-block
						stroke black
						stroke-width 1.5px

		.nav-menu
			padding 0.3em 0 0 0

			svg
				margin 0 0 0 25%
				border-top 1px solid black
				border-bottom 1.5px solid black
				padding-top 8px
				cursor pointer

				line
					stroke black
					stroke-width 1.5px

		.nav-title
			font-weight bold
			padding 0

			p
				font-size 20px
				color black
				white-space nowrap

				img
					position relative
					top -2px
					height 19px
					width 19px

	.home
		margin 84px 0 0 0
		align-items center
		display flex
		flex-direction column
		position relative
		top -12%
		width 101%
		// height 100%
		z-index 0
		padding 0

		.bg-container
			width 100%
			margin 0
			overflow hidden
			height 100%

			img
				left 60%
				min-height 100%
				min-width 100%
				position absolute
				top -60%
				transform translate(-61%, 0)
				z-index 0

		h1
			z-index 10
			align-items center
			letter-spacing 2px

			&::first-letter
				font-size 1.3em

		h3
			z-index 10
			font-size 1.3em
			font-weight 600

		.btn
			display flex
			font-size 1.3em
			vertical-align middle
			position relative
			top 15vh
			margin 0
			background-color transparent
			border 1px solid rgb(33,33,33)
			padding 0.7em 1.7em

@media only screen and (max-width 640px)

	#principal
		.home
			
		.bg-container
			

			.bg-container
				
				img
					

@media only screen and (max-width 360px)

	#principal
		.home
			

			.bg-container
				

				img
					left 80%
					top -28%